<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="horizontalButtonCompact">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0sp</item>
        <item name="android:layout_margin">4sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0sp</item>
        <item name="android:minHeight">0sp</item>
        <item name="android:textSize">@dimen/textSize_24</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="horizontalButtonSpare">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0sp</item>
        <item name="android:layout_margin">8sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0sp</item>
        <item name="android:minHeight">0sp</item>
        <item name="android:textSize">@dimen/size_level8</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
