<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/projectMingChenTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="项目名称" />

    <TextView
        android:id="@+id/projectCreaterTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="创建人" />

    <TextView
        android:id="@+id/projectCreateDateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:gravity="right"
        android:layout_gravity="right"
        android:text="日期" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="right"
        android:padding="0sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="@dimen/size_level1">

        <Button
            android:id="@+id/button_open_project"
            android:text="{cmd_folder_open}"
            style="@style/horizontalButtonCompact"/>

        <Button
            android:id="@+id/button_delete_project"
            style="@style/horizontalButtonCompact"
            android:text="{cmd_delete}" />

        <Button
            android:id="@+id/button_member_manager"
            style="@style/horizontalButtonCompact"
            android:text="{cmd_account_group}" />
    </LinearLayout>>


</LinearLayout>